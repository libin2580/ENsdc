<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/bg"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_topchange"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/transparent"

        android:navigationIcon="@color/White"
        app:theme="@style/ToolbarStyle"
        >




    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="bottom"
        android:paddingBottom="@dimen/_30sdp"
        >
        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_90sdp"
            android:paddingTop="@dimen/_20sdp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/logohighres"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"

        android:layout_weight="5"
        android:layout_marginBottom="@dimen/_5sdp">

        <EditText
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_newpass"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:hint="New Password"
            android:gravity="left"
            android:maxLength="15"
            android:background="@drawable/username_field"
            android:fontFamily="sans-serif-light"
            android:elegantTextHeight="false"
            android:layout_marginBottom="@dimen/_20sdp"

            android:inputType="textPassword"
            android:drawablePadding="@dimen/_11sdp"

            android:textColor="@color/White"
            android:paddingBottom="@dimen/_15sdp"
            android:textColorHint="@color/White"
            android:drawableLeft="@drawable/lock"
            />
        <EditText
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_cnfrmpass"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:hint="Confirm Password"
            android:gravity="left"
            android:maxLength="15"
            android:background="@drawable/username_field"
            android:fontFamily="sans-serif-light"
            android:elegantTextHeight="false"
            android:layout_marginBottom="@dimen/_20sdp"

            android:inputType="textPassword"
            android:drawablePadding="@dimen/_11sdp"

            android:textColor="@color/White"
            android:paddingBottom="@dimen/_12sdp"
            android:textColorHint="@color/White"
            android:drawableLeft="@drawable/lock"
            />

        <Button
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:id="@+id/button_submt"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"

            android:background="#10315a"

            android:textColor="@color/White"
            android:paddingBottom="@dimen/_5sdp"
            android:textColorHint="@color/White"
            android:text="Submit"
            android:layout_marginBottom="@dimen/_6sdp"
            />





    </LinearLayout>

</LinearLayout>

    <ProgressBar android:id="@+id/progress_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone" android:indeterminateDrawable="@drawable/my_wheel" android:layout_centerInParent="true" />

</RelativeLayout>

