<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tops"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:background="@color/actionbar_opacity"

        android:navigationIcon="@color/White"
        app:theme="@style/ToolbarStyle"



        >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Details"
                android:layout_gravity="center"
                android:textColor="@color/WhiteSmoke"
                android:id="@+id/toolbar_CRCNAM" />




    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/flag"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/imgebglayer" />
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/imgcrcenq"
                android:padding="@dimen/_5sdp"

                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/txtcrcenq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:paddingTop="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_80sdp"
                android:text="Approved Courses"
                android:textColor="@color/White"
            />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
     android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:background="@drawable/homescreenbuttonbig"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"

         >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BOSIET"
            android:textColor="@color/White"
            android:textSize="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/txtsubenq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_10sdp"
            android:text="Basic Offshore Safety Induction Emergency Training"
            android:textColor="@color/White"

            android:id="@+id/txt_descr" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_18sdp"
            android:background="#80000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"

                android:text="Duration -"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
  android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/White"
            android:id="@+id/txt_dur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"
                android:text="Validity -"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"

                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/White"
                android:id="@+id/txt_val"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objectives"
            android:textColor="@color/WhiteSmoke"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"

            android:id="@+id/textView12" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""

            android:background="@drawable/crcd"
            android:id="@+id/txtobj"
            android:scrollbars="vertical"


            android:textColor="@color/White"


            ></WebView>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Audience"
            android:textColor="@color/WhiteSmoke"
android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/textView7" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/WhiteSmoke"
            android:background="#20ffffff"
            android:scrollbars="vertical"
            android:paddingLeft="@dimen/_20sdp"


            android:id="@+id/txt_crcnmbr" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/textView13"
            android:textColor="@color/WhiteSmoke"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
           />
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/WhiteSmoke"
            android:background="#20ffffff"
            android:scrollbars="vertical"
            android:paddingBottom="@dimen/_40sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/txt_crcloc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aim"
            android:textColor="@color/WhiteSmoke"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/textView9" />
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/WhiteSmoke"
            android:background="#20ffffff"
            android:scrollbars="vertical"
            android:paddingBottom="@dimen/_40sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:id="@+id/txt_crcaim"/>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/_5sdp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/buttonbackgrnd"
                android:textColor="#ffffff"
                android:text="ADD TO CART"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/but_dt_addtocrt" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/br"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#10315a"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:textColor="#ffffff"
                android:text="ENQUIRE"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/but_enq_dt_ecrc" />

        </LinearLayout>


    </LinearLayout>





</LinearLayout>
